<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_introduce_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_slide_title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textSize="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/fragment_arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher_background"/>

        <ImageView
            android:id="@+id/fragment_introduce_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/fragment_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/introduce_indicator_layout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/indicator_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/indicator_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/indicator_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/indicator_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_slide_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:textSize="25dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/fragment_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="@color/colorPrimary"
            android:text="アプリの利用を開始する"/>
    </RelativeLayout>

</LinearLayout>